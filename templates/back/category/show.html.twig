{% extends 'base.html.twig' %}

{% block title %}Catégorie
{% endblock %}

{% block body %}
	<h1>Catégories</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ category.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ category.name }}</td>
			</tr>
			<tr>
				<th>Créé le</th>
				<td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Modifié</th>
				<td>{{ category.UpdatedAt ? category.UpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-warning" href="{{ path('app_back_category_index') }}">{{ 'Retour' }}</a>
	<br>
    {# If category is "Entrées", "Plats" ou "Dessert" #}
	{% if category.name in ['Entrées', 'Plats', 'Desserts']  %}
	{% else %}
    {# else edit and delete #}
		<a class="btn btn-outline-success" href="{{ path('app_back_category_edit', {'id': category.id}) }}">{{ 'Modifier' }}</a>
		{{ include('back/category/_delete_form.html.twig') }}
	{% endif %}
{% endblock %}
