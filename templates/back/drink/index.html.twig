{% extends 'base.html.twig' %}

{% block title %}Drink index{% endblock %}

{% block body %}
    <h1>Drink index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Alcool</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for drink in drinks %}
            <tr>
                <td>{{ drink.id }}</td>
                <td>{{ drink.name }}</td>
                <td>{{ drink.description }}</td>
                <td>{{ drink.price }}</td>
                <td>{{ drink.alcool ? 'Yes' : 'No' }}</td>
                <td>{{ drink.createdAt ? drink.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ drink.updatedAt ? drink.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_back_drink_show', {'id': drink.id}) }}">show</a>
                    <a href="{{ path('app_back_drink_edit', {'id': drink.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_drink_new') }}">Create new</a>
{% endblock %}
