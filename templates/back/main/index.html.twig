
{% extends 'base.html.twig' %}

{% block title %}Welcome dans le Backoffice d'O'Resto{% endblock %}

{% block body %}
    <div class="row">
            <div class="col-12 col-md-6 col-lg-3 col-xl-3">
                    <div class="card-body d-flex flex-column justify-content-center text-center">
                        <h4 class="card-title">Gestion de la Carte</h4>
                        {% include 'back/partials/_card_link.html.twig' with { 'entity' : 'eat' } %}
                        {% include 'back/partials/_card_link.html.twig' with { 'entity' : 'drink' } %}
                        {% include 'back/partials/_card_link.html.twig' with { 'entity' : 'menu' } %}
                        {% include 'back/partials/_card_link.html.twig' with { 'entity' : 'category' } %}
                    </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3 col-xl-3">
                    <div class="card-body d-flex flex-column justify-content-center text-center">
                        <h4 class="card-title">Gestion de la Galerie</h4>
                        {% include 'back/partials/_card_link.html.twig' with { 'entity' : 'image' } %}
                    </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3 col-xl-3">
                    <div class="card-body d-flex flex-column justify-content-center text-center">
                        <h4 class="card-title">Gestion du Restaurant</h4>
                        {% include 'back/partials/_card_link.html.twig' with { 'entity' : 'restaurant' } %}
                        {% include 'back/partials/_card_link.html.twig' with { 'entity' : 'reservation' } %}
                        {% include 'back/partials/_card_link.html.twig' with { 'entity' : 'review' } %}
                    </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                    <div class="card-body text-center">
                        <h4 class="card-title">Gestion des Utilisateurs</h4>
                        {% include 'back/partials/_card_link.html.twig' with { 'entity' : 'user' } %}
                    </div>
            </div>
        </div>
    </div>
{% endblock %}