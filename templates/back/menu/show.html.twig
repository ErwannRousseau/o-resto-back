{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <h1>Menu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ menu.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ menu.price }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ menu.createdAt ? menu.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ menu.updatedAt ? menu.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

   <a class="btn btn-warning" href="{{ path('app_back_menu_index') }}" >{{ 'Retour' }}</a> <br>

    <a class="btn btn-outline-success" href="{{ path('app_back_menu_edit', {'id': menu.id}) }}" >{{ 'Modifier' }}</a>
    {{ include('back/menu/_delete_form.html.twig') }}
{% endblock %}
