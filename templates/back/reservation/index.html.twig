{% extends 'base.html.twig' %}

{% block title %}Les Réservations{% endblock %}

{% block body %}
    <h1>Les Réservations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nbre couverts</th>
                <th>Date</th>
                <th>Heure</th>
                <th>Créé le</th>
                <th>Modifié</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.numberOfCovers }}</td>
                <td>{{ reservation.date ? reservation.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.timeSlots ? reservation.timeSlots|date('H:i:s') : '' }}</td>
                <td>{{ reservation.createdAt ? reservation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.updatedAt ? reservation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_back_reservation_show', {'id': reservation.id}) }}">Voir</a>
                    <a class="btn btn-primary" href="{{ path('app_back_reservation_edit', {'id': reservation.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_back_reservation_new') }}">Ajouter</a>
{% endblock %}
